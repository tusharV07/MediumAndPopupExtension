{
    "manifest_version": 3,
    "name": "My Popup Blocker",
    "version": "1.0",
    "description": "Blocks intrusive popups and overlays.",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "icons/enabled16.png",
            "48": "icons/enabled48.png",
            "128": "icons/enabled128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/logo16.png",
        "48": "icons/logo48.png",
        "128": "icons/logo128.png"
    }
}